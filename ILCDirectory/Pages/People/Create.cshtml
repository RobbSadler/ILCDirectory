@page
@using ILCDirectory.Enums
@model ILCDirectory.Views.People.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Person</h4>
<hr />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.Title" class="control-label"></label>
                <input asp-for="Person.Title" class="form-control" />
                <span asp-validation-for="Person.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.FirstName" class="control-label"></label>
                <input asp-for="Person.FirstName" class="form-control" />
                <span asp-validation-for="Person.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.MiddleName" class="control-label"></label>
                <input asp-for="Person.MiddleName" class="form-control" />
                <span asp-validation-for="Person.MiddleName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.LastName" class="control-label"></label>
                <input asp-for="Person.LastName" class="form-control" />
                <span asp-validation-for="Person.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.Suffix" class="control-label"></label>
                <input asp-for="Person.Suffix" class="form-control" />
                <span asp-validation-for="Person.Suffix" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.NickName" class="control-label"></label>
                <input asp-for="Person.NickName" class="form-control" />
                <span asp-validation-for="Person.NickName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group">
                <label asp-for="Person.MaidenName" class="control-label"></label>
                <input asp-for="Person.MaidenName" class="form-control" />
                <span asp-validation-for="Person.MaidenName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-lg-3">
            <div class="form-group">
                <label asp-for="Person.DateOfBirth" class="control-label"></label>
                <input asp-for="Person.DateOfBirth" class="form-control" />
                <span asp-validation-for="Person.DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group pt-4">
                <select asp-for="Person.Gender" asp-items="Html.GetEnumSelectList<Gender>()"><option value="">Gender</option></select>
                <span asp-validation-for="Person.Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group pt-4">
                <select asp-for="Person.MaritalStatus">
                    <option value="">Marital Status</option>
                    <option value="S">Single</option>
                    <option value="M">Married</option>
                    <option value="D">Divorced</option>
                    <option value="U">Unmarried</option>
                    <option value="W">Widowed</option>
                </select>
                <span asp-validation-for="Person.MaritalStatus" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Person.Comment" class="control-label"></label>
                <textarea asp-for="Person.Comment" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Person.Comment" class="text-danger"></span>
        </div>
    </div>
        <div class="col-auto">
            <div class="form-group pt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

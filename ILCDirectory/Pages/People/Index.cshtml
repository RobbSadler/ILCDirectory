@page
@model ILCDirectory.Pages.People.IndexModel

@{
    ViewData["Title"] = "People Index";
}

<h1>People</h1><h4>Find Person</h4>
<p>
    <div><input /> <button>Search (name, address, workgroup)</button> <input id="localOnlyCheckbox" type="checkbox" /> <label for="localOnlyCheckbox">Local Only</label>&nbsp;<a asp-page="Create">Create New Person</a></div>
</p>

<table class="personstable table">
    <thead>
        <tr>
            <th>
                Name (Last (Maiden), First (Nickname))
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].LanguagesSpoken)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Persons) {
        <tr>
            <td>
                @item.LastName@item.MaidenName, @item.FirstName @item.NickName
            </td>
            <td>
                @item.LanguagesSpoken
            </td>
            <td>
                <a asp-action="Edit">Edit</a>
                <a asp-action="Delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

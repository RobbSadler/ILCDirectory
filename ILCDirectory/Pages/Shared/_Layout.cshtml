<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ILCDirectory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/solid.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ILCDirectory.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-default.min.css" asp-append-version="true" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-migrate/jquery-migrate.js"></script>
	<script src="~/lib/jquery-ui/jquery-ui.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script type="text/javascript" src="~/lib/jquery-layout/jquery.layout_and_plugins.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script type="text/javascript">

		var myLayout;

		$(document).ready(function () {

			myLayout = $('body').layout({
				west__minSize: 50
				, east__minSize: 200
			});

		});

	</script>
</head>
<body>

	<!-- manually attach allowOverflow method to pane -->
	<div class="ui-layout-north">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-1">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index"><span style="font-weight: 600;font-stretch:condensed">ILC</span><span style="font-style:italic">Directory</span></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Family</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Address / Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Office</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Mailroom</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Directory Display</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    </div>

	<div class="ui-layout-west">
		This is the west pane, closable, slidable and resizable
		<p><button onclick="myLayout.close('west')">Close Me</button></p>
	</div>

    <div class="ui-layout-south footer text-muted">
        <div class="container">
            &copy; 2022 - ILCDirectory - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        <p><button onclick="myLayout.toggle('north')">Toggle North Pane</button></p>
	</div>

	<div class="ui-layout-east">
		East
		<p><button onclick="myLayout.close('east')">Close Me</button></p>
	</div>

	<div class="ui-layout-center">
		This center pane auto-sizes to fit the space <I>between</I> the 'border-panes'
		<p>This layout uses default options, except for a minSize on East and West panes</p>
		<p>The Close and Toggle buttons are examples of <B>custom buttons</B></p>

        <p><button onclick="myLayout.toggle('south')">Toggle South</button></p>

		@RenderBody() <!-- Render the main content of each view -->
	</div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
